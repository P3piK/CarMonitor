<Page x:Class="CarMonitor.Client.Pages.ChooseProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarMonitor.Client.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChooseProfilePage">

    <Grid>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="181" Margin="50,25,0,0" VerticalAlignment="Top" Width="184"/>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="154" Margin="330,87,0,0" VerticalAlignment="Top" Width="200">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="proceedButton" Content="Proceed" HorizontalAlignment="Left" Margin="524,290,0,0" VerticalAlignment="Top" Width="76" Click="proceedButton_Click"/>
        <Button x:Name="createProfileButton" Content="Create" HorizontalAlignment="Left" Margin="260,290,0,0" VerticalAlignment="Top" Width="76" Click="createProfileButton_Click"/>

    </Grid>
</Page>
